{% if (article_reviews) %}
<div id="article-review">
{% for article_review in article_reviews %}
<div class="review-item">
  <div class="review-heading d-flex">
	<div class="block-author">{{ article_review['author'] }}</div>
	<div class="block-date">
	  {{ article_review['date_added'] }}
	</div>
  </div>
  <div class="review-info {% if (article_review_show_like_dislike is defined and (article_review_show_like_dislike == 1)) %}show-like-dislike{% endif %}">
	<div class="rating">
		{% set i = 1 %}{% for i in i..5 %}
		{% if (article_review['rating'] < i) %}
		<svg width="19" height="18" viewBox="0 0 19 18" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path fill-rule="evenodd" clip-rule="evenodd" d="M9.50033 14.7502L5.12206 17.052C4.38843 17.4377 3.531 16.8147 3.67111 15.9978L4.50729 11.1226L0.96519 7.66986C0.371673 7.09133 0.699183 6.08335 1.5194 5.96417L6.41446 5.25287L8.6036 0.8172C8.97041 0.0739543 10.0303 0.0739541 10.3971 0.8172L12.5862 5.25287L17.4813 5.96417C18.3015 6.08335 18.629 7.09133 18.0355 7.66986L14.4934 11.1226L15.3296 15.9978C15.4697 16.8147 14.6122 17.4377 13.8786 17.052L9.50033 14.7502Z" fill="#EFEFEF"/>
		</svg>
		{% else %}
		<svg width="19" height="18" viewBox="0 0 19 18" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path fill-rule="evenodd" clip-rule="evenodd" d="M9.96568 14.9949C9.67435 14.8417 9.32632 14.8417 9.03499 14.9949L5.12206 17.052C4.38843 17.4377 3.531 16.8147 3.67111 15.9978L4.50729 11.1226L0.96519 7.66986C0.371673 7.09133 0.699183 6.08335 1.5194 5.96417L6.41446 5.25287L8.6036 0.8172C8.97041 0.0739543 10.0303 0.0739541 10.3971 0.8172L12.5862 5.25287L17.4813 5.96417C18.3015 6.08335 18.629 7.09133 18.0355 7.66986L14.4934 11.1226L15.3296 15.9978C15.4697 16.8147 14.6122 17.4377 13.8786 17.052L9.96568 14.9949Z" fill="#E5DB77"/>
		</svg>
		{% endif %}
		{% endfor %}
	  </div>
	  <div class="comment">
		{{ article_review['text'] }}
	  </div>
	  {% if (article_review['admin_reply'] is defined and article_review['admin_reply'] != '') %}
		<div class="admin_reply">
		  <div>{{ text_admin_reply }}</div>
		  {{ article_review['admin_reply'] }}
		</div>
	  {% endif %}
	    {% if (article_review_show_like_dislike is defined and (article_review_show_like_dislike == 1)) %}
		  <div class="article-like-dislike-box">
			<button type="button" onclick="ArticleReviewlikeDislike('{{ article_review['article_review_id']}}','like')" id="like_article_review{{ article_review['article_review_id']}}" class="btn-like like">
			  <img src="catalog/view/theme/cyberstore/image/r-store/like-icon.svg" alt="like-icon.svg">
			  <span class="likes">{{ article_review['like'] }}</span>
			</button>
			<button type="button" onclick="ArticleReviewlikeDislike('{{ article_review['article_review_id']}}','dislike')" id="dislike_article_review{{ article_review['article_review_id']}}" class="btn-dislike dislike">
			  <img src="catalog/view/theme/cyberstore/image/r-store/dislike-icon.svg" alt="dislike-icon.svg">
			  <span class="dislikes">{{ article_review['dislike'] }}</span>
			</button>
		  </div>
		{% endif %}
  </div>
</div>
{% endfor %}
</div>
{% else %}
<div id="article-review">
{{ text_no_article_reviews }}
</div>
{% endif %}
{% if (article_reviews) %}
<div class="text-center mb-20">{{ pagination }}</div>
{% endif %}