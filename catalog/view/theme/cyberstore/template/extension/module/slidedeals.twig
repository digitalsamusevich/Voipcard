<div class="block-slidedeals-v1 bg-sliderdeals">
{% set gcdealsslider = random(1000) %}
	<div class="sm-dealsslider theme1 dealsslider{{ gcdealsslider }}">
		<div id="sync1" class="sync1{{ gcdealsslider }} col-xs-12 col-sm-9 col-md-10 ds-items-detail carousel_numb_dealsslider{{ gcdealsslider }}">
			{% for product in products %}
				<div class="dealsslider-item">
					<div class="dealsslider-item-inner row">
						<div class="dealsslider-datetime col-xs-12 col-sm-12 col-md-3">
							<div class="box-title">
								<div class="dealsslider-title-text">
									<div class="ds-title">{{ title}}</div>
								</div>
								<div class="pre_text">{{ description[lang_id]['text']}}</div>
							</div>
							{% if (status_timer_special == '1' and product['special']) %}
								<div class="action-timer dealsslider-countdown">
									<div class="timer_inner" data-date-end="{{ product['date_end'] }}"></div>
								</div>
							{% endif %}

						</div>
						<div class="dealsslider-wrappper col-xs-12 col-sm-12 col-md-9">
							<div class="dealsslider-info product-thumb">
								<div class="dealsslider-image col-xs-12 col-sm-12 col-md-5">
									<div class="image">
										<div class="stickers-ns">
											{% if ((on_off_sticker_special == '1') and product['special']) %}
												<div class="sticker-ns special">
													<i class="fa {{ config_change_icon_sticker_special }} "></i>
													<span>{{ text_sticker_special[lang_id]['config_change_text_sticker_special'] }}</span>
												</div>
											{% endif %}
											{% if ((on_off_sticker_topbestseller == '1') and (product['top_bestsellers'] >= config_limit_order_product_topbestseller)) %}
												<div class="sticker-ns bestseller">
													<i class="fa {{ config_change_icon_sticker_topbestseller }} "></i>
													<span>{{ text_sticker_topbestseller[lang_id]['config_change_text_sticker_topbestseller'] }}</span>
												</div>
											{% endif %}
											{% if ((on_off_sticker_popular == '1') and (product['viewed']>=config_min_quantity_popular)) %}
												<div class="sticker-ns popular">
													<i class="fa {{ config_change_icon_sticker_popular }} "></i>
													<span>{{ text_sticker_popular[lang_id]['config_change_text_sticker_popular'] }}</span>
												</div>
											{% endif %}
											{% if ((on_off_sticker_newproduct == '1') and product.sticker_new_prod ) %}
												<div class="sticker-ns newproduct">
													<i class="fa {{ config_change_icon_sticker_newproduct }}"></i>
													{{ text_sticker_newproduct[lang_id]['config_change_text_sticker_newproduct'] }}
												</div>
											{% endif %}
										</div>
										{% if (on_off_slider_additional_image == '1') %}
											<div class="image-carousel">
												<a href="{{ product['href'] }}"><img {% if (product['product_quantity'] <= 0 and show_stock_status) %}data-status="{{ product['stock_status'] }}"{% endif %} src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive" /></a>
											{% for img in product['additional_img'] %}
												<a class="additional-image hidden" href="{{ product['href'] }}"><img src="{{ img }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive" /></a>
											{% endfor %}
											</div>
										{% elseif (on_off_slider_additional_image == '2') %}
											<a href="{{ product['href'] }}"><img {% if (product['product_quantity'] <= 0 and show_stock_status) %}data-status="{{ product['stock_status'] }}"{% endif %} {% if (product['additional_image_hover']) %}data-additional-hover="{{ product['additional_image_hover'] }}"{% endif %} src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive" /></a>
										{% else %}
											<a href="{{ product['href'] }}"><img {% if (product['product_quantity'] <= 0 and show_stock_status) %}data-status="{{ product['stock_status'] }}"{% endif %} src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive" /></a>
										{% endif %}
									</div>
								</div>
								<div class="dealsslider-content col-xs-12 col-sm-12 col-md-7">
									<div class="product-name"><a href="{{ product['href'] }}">{{ product['name'] }}</a></div>
									{% if (on_off_model_product != '0') %}
										<div class="product-model">{{ product['model']}}</div>
									{% endif %}
									{% if (on_off_rating != '0') %}
										<div class="rating">
											<span class="rating-box">
												{% set i = 1 %}{% for i in i..5 %}
													{% if (product['rating'] < i) %}
														<span class="product-rating-star">
															<svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
																<path fill-rule="evenodd" clip-rule="evenodd" d="M5.5 8.75L3.47287 9.81573C2.73924 10.2014 1.88181 9.57846 2.02192 8.76155L2.40907 6.50431L0.769082 4.90572C0.175565 4.32718 0.503075 3.31921 1.3233 3.20002L3.5897 2.87069L4.60326 0.816985C4.97008 0.0737394 6.02992 0.0737402 6.39674 0.816986L7.4103 2.87069L9.67671 3.20002C10.4969 3.31921 10.8244 4.32718 10.2309 4.90572L8.59093 6.50431L8.97808 8.76155C9.11819 9.57846 8.26076 10.2014 7.52713 9.81573L5.5 8.75Z" fill="#EFEFEF"/>
															</svg>
														</span>
													{% else %}
														<span class="product-rating-star">
															<svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
																<path fill-rule="evenodd" clip-rule="evenodd" d="M5.5 8.75L3.47287 9.81573C2.73924 10.2014 1.88181 9.57846 2.02192 8.76155L2.40907 6.50431L0.769082 4.90572C0.175565 4.32718 0.503075 3.31921 1.3233 3.20002L3.5897 2.87069L4.60326 0.816985C4.97008 0.0737394 6.02992 0.0737402 6.39674 0.816986L7.4103 2.87069L9.67671 3.20002C10.4969 3.31921 10.8244 4.32718 10.2309 4.90572L8.59093 6.50431L8.97808 8.76155C9.11819 9.57846 8.26076 10.2014 7.52713 9.81573L5.5 8.75Z" fill="#E5DB77"/>
															</svg>
														</span>
													{% endif %}
												{% endfor %}
											{% if (on_off_quantity_reviews != '0') %}
												<span class="quantity-reviews"><a data-placement="right"  data-toggle="tooltip" title="{{ text_reviews_title }}" href="{{ product['href'] }}#tab-review">{{ product['reviews'] }}</a></span>
											{% endif %}
											</span>
										</div>
									{% endif %}
									{% if (on_off_description != '0') %}
										<div class="product-description">{{ product['description'] }}</div>
									{% endif %}

								{% if (show_options) %}
